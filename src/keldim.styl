@import '/blocks/search/search.styl'
@import '/blocks/header/header.styl'
@import '/blocks/sliders/sliders.styl'
@import '/blocks/footer/footer.styl'
@import '/fonts/fonts.styl'    

*
    box-sizing border-box
body
    font-family 'Conv_SourceSansPro-Regular', sans-serif
    padding 0
    margin 0
.wrapper
    width 90%
    margin 0 auto
.keldim__title
    padding 0
    margin-top 20px
    font-size 3em
    color rgba(40, 40, 40, 1)
    text-align center
.pie-chart__container
    height 250px
    width 250px
    margin 0 auto
.keldim__item
    height 200px
    width 70%
    border-radius 5px
    margin 25px 0
    padding 15px
    &_left
        float left
        background rgba(40, 40, 40, 1)
    &_right
        float right
        background rgba(75, 75, 75, 1)
.image__container
    height 170px
    width 170px
    &_left
        float left
    &_right
        float right
.keldim__img
    height 100%
    width 100%
.image__title
    padding 0
    margin 0
    font-size 2em
    color rgba(255, 255, 255, 1)
    text-align center