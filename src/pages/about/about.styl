@import '../../blocks/header/header.styl'
@import '../../blocks/footer/footer.styl'
@import '../../blocks/user-profile/user-profile.styl'
@import '../../blocks/video/video.styl'
@import '../../blocks/location/location.styl'
@import '../../fonts/fonts.styl'    

*
  box-sizing border-box
html
  font-family "SourceSansPro", Arial, sans-serif
  font-size 62.5%
  color rgb(40, 40, 40)
  background #fff
body
  padding 0
  margin 0
.about__title
  font-size 5rem
  text-align center
  padding 0
  margin 20px 0 20px 0
.about__video-container
  height 336px
  width 594px
  margin 20px auto 25px
.about__text
  background rgba(40, 40, 40, 1)
  color #ffffff
  padding 25px 5%
  margin 0
  font-size 1.6rem
  @media screen and (max-width 700px)
    font-size 1.4rem
  &_location
      background none
      color inherit
  &_nopadding-left
      padding 25px 0
.about__parallax
  height 350px
  background-attachment fixed
  background-position center 
  background-repeat no-repeat
  background-size cover
  &_first
      background-image url('../../images/parallax1.png')
  &_second 
      background-image url('../../images/parallax2.png')
.about__location-wrapper
  border-top 2px solid rgba(40, 40, 40, 1)
  padding 25px
.map-flex__container
  display flex
  justify-content space-between
  @media screen and (max-width 700px)
    flex-direction column
.about__map-container
  width 100%
.about__map-admin
  padding-left 25px