.header
    width 100%
.menu
    width 50%
    padding 0
    margin 5px auto 0
    display flex
    justify-content space-between
    &__item
        position relative
        font-family 'Conv_Lato-Regular'
        display inline-block
        margin 0 20px
        background #A25021
        width 100px
        height 35px
        line-height 30px
        text-align center
        border-radius 5px 5px 0 0
        border #452505 solid 2px
        border-bottom 0
        cursor pointer
        z-index 1
        &:hover
            font-family 'Conv_Lato-Italic'
            background -webkit-linear-gradient(#D69B60, #A25021)
            z-index 3
    &__link
        text-decoration none
        color #B4F7B6
.header__board
    position relative
    width 98%
    height 100px
    margin -5px auto 0
    background #A25021
    border #452505 solid 2px
    border-radius 5px 5px 0 0
    z-index 2
.flex-container
    display flex
    align-items center
    justify-content space-around
    width 70%
    height 100px
.header__search
    position absolute
    top 10px
    right 10px
.header__emblem
    display inline-block
    background url('../img/emblem.png') no-repeat 50% 50%
    background-size cover
    height 80px
    width @height
.header__text
    display inline-block
    font-family 'Conv_Lato-ThinItalic'
    color #B4F7B6
    font-size 3.5em

@media screen and (max-width 700px)
    .menu__item
        margin 0
        position relative
        font-family 'Conv_Lato-Regular'
        display inline-block
        background #A25021
        width 100px
        height 35px
        line-height 30px
        text-align center
        border-radius 5px 5px 0 0
        border #452505 solid 2px
        border-bottom 0
        cursor pointer
        z-index 1
        &:hover
            font-family 'Conv_Lato-Italic'
            background -webkit-linear-gradient(#D69B60, #A25021)
            z-index 3
    .header__board
        position relative
        width 98%
        display flex
        flex-direction column
        justify-content center
        margin -5px auto 0
        background #A25021
        border #452505 solid 2px
        border-radius 5px 5px 0 0
        z-index 2
    .flex-container
        display flex
        flex-direction column
        justify-content center
        width 100%
    .header__search
        position absolute
        top 60px
        right 10px
    .header__emblem
        display none
    .header__text
        display inline-block
        font-family 'Conv_Lato-ThinItalic'
        color #B4F7B6
        font-size 2em
        margin-top -8%