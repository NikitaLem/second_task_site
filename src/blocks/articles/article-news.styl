.main__news-article
  display none
  padding 20px 5%
.visible
  display block
.news-article
  &__image
    width 100%
    max-width 702px
    height 400px
  &__title
    padding 0
    margin 20px 0 0 0
    text-align center
    font-size 4.5rem
    @media screen and (max-width 800px)
      font-size 3.5rem
  &__text
    font-size 1.8rem
    margin 25px 20px 0 0
    @media screen and (max-width 800px)
      font-size 1.6rem
      margin-right 0
  &__pic-container
    display inline-block
    background #bababa
    margin-top 20px
  &__pic-desc
    font-size 1.6rem
    @media screen and (max-width 800px)
      font-size 1.4rem
.flex-1
  display flex
  justify-content space-between
  align-items flex-start
  @media screen and (max-width 800px)
    flex-direction column
    align-items center
.flex-2
  display flex
  flex-direction column
  justify-content space-between