mixin sliders(color, gr, pop, tr, ident)
    input(class="sliders sliders_"+color+" sliders_"+pop+" sliders_"+tr id=ident type='range' value='0' min='0' max='100' step='.01' list='sliders_data')
    div(class="sliders__popup")
    div(class="sliders__grade sliders__grade_"+gr)
        span(class="sliders__value") 0
        span(class="sliders__value") 25
        span(class="sliders__value") 50
        span(class="sliders__value") 75
        span(class="sliders__value") 100