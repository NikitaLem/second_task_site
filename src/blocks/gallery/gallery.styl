.col-1 
    width 10%
    display flex
    align-items stretch
    background #A25021
.col-3
    width 10%
    display flex
    align-items stretch
    background #A25021
.col-2 
    width 80%
    min-height 100vh
    background -webkit-linear-gradient(#F3ECE8, #D8C8B8)
    border #452505 solid
    border-width 0 2px 0 2px
.gallery__images
    position relative
    margin-top 3%
    display flex
    justify-content center
    width 100%
    height 300px
.image
    position absolute
    opacity 0
    transition opacity 0.5s
    border #452505 solid 2px
    border-radius 3px
    box-shadow 5px 5px 10px #565656
    &_show
        opacity 1
.gallery__buttons
    display flex
    justify-content space-between
    width 300px
    margin 10px auto 0
.gallery__text
    margin 5% auto 0
    text-align center
    line-height 50px
    height 50px
    width 200px
    font-family 'Conv_Lato-Italic'
    font-size 3em
    color #A25021