@import '../../blocks/user-profile/user-profile.styl'
@import '../../blocks/toggles/toggles.styl'

.member__container
  width 100%
  padding 25px 2%
.members__title
  font-size 5rem
  text-align center
  color rgb(40, 40, 40)
  padding 20px 0 10px 0
  margin 0
.member__person
  display flex
  justify-content space-around
  align-items center
  width 50%
  margin 0 auto
  @media screen and (max-width 800px)
    flex-direction column
    width 100%
.member__job
  font-size 2.4rem
  color rgb(40, 40, 40)
  margin 0
  padding 0 0 15px 0
.member__text
  font-size 1.6rem
  color #fff
  background #333333
  padding 15px 40px
  margin 20px 0 0 0
  @media screen and (max-width 800px)
    padding 15px 20px
.member__about
  font-family 'Lato', Arial, sans-serif
  font-weight 400
  font-style italic
  font-size 1.6rem
  background #999999
  border-radius 10px
  padding 15px 40px
  margin 30px 0 0 0
  @media screen and (max-width 800px)
    padding 15px 20px
.member__info-table
  border 1px solid rgba(40, 40, 40, 1)
  border-collapse collapse
  margin 30px auto 0
  @media screen and (max-width 480px)
    display none
  &_all
    width 90%
.info-table__head
  background #333333
  font-size 1.4rem
  text-align left
  color #fff
.info-table__head-cell
  border 1px solid rgb(40, 40, 40)
  padding 12px 5px
.info-table__body-cell
  font-size 1.4rem
  border 1px solid rgb(40, 40, 40)
  background #d8d8d8
  color rgb(40, 40, 40)
  padding 5px
.member__info-list
  margin-top 30px
.member__info-list-item
  display none
  font-size 1.6rem
  margin-top 10px
  @media screen and (max-width 480px)
    display flex
    align-items center
  & .switch
    margin-left 10px