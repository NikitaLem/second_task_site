@import '../../blocks/user-profile/user-profile.styl'
@import '../../blocks/toggles/toggles.styl'

.member__container
  width 100%
  padding 25px 2%
  &_trainer
    position absolute
    height 100%
    transition .5s
  &_left
    left -100%
    top 0
    padding-left 0
    padding-right 0
  &_center
    top 0
    left 0
    padding-left 2%
    padding-right 2%
  &_right
    top 0
    left 100%
    padding-left 0
    padding-right 0
  &_no-transition
    transition 0s
.members__title
  font-size 5rem
  text-align center
  color rgb(40, 40, 40)
  padding 20px 0 10px 0
  margin 0
.member__person
  display flex
  justify-content space-around
  align-items center
  width 50%
  margin 0 auto
  @media screen and (max-width 800px)
    flex-direction column
    width 100%
.member__job
  font-size 2.4rem
  color rgb(40, 40, 40)
  margin 0
  padding 0 0 15px 0
.member__text
  font-size 1.6rem
  color #fff
  background #333333
  padding 15px 40px
  margin 20px 0 0 0
  @media screen and (max-width 800px)
    padding 15px 20px
.member__about
  font-family 'Lato', Arial, sans-serif
  font-weight 400
  font-style italic
  font-size 1.6rem
  background #999999
  border-radius 10px
  padding 15px 40px
  margin 30px 0 0 0
  @media screen and (max-width 800px)
    padding 15px 20px
.member__info-table
  border 1px solid rgba(40, 40, 40, 1)
  border-collapse collapse
  margin 30px auto 0
  &_all
    width 90%
.info-table__head
  background #333333
  font-size 1.4rem
  text-align left
  color #fff
.info-table__head-cell
  border 1px solid rgb(40, 40, 40)
  padding 12px 5px
.info-table__body-cell
  font-size 1.4rem
  border 1px solid rgb(40, 40, 40)
  background #d8d8d8
  color rgb(40, 40, 40)
  padding 5px