.events
    display flex
    width 250px
    height 184px
    &__image-container
        float left
        width 32.99%
        border-radius 5px 0 0 5px
    &__image
        width 100%
        height 100%
        border-radius 5px 0 0 5px
    &__content
        float left
        width 67.01%
        border-radius 0 5px 5px 0
        background #4eb7a8
        color #ffffff
        padding-left 11px
    &__header
        font-family 'Conv_Lato-Black'
        font-size 12.5px
        margin-top 8.5px
    &__date
        font-family 'Conv_Lato-Light'
        margin-top 11px
        &_num
            font-size 55px
            line-height 55px
            display inline-block
        &_month
            font-size 24px
            display inline-block
            margin-left 9px
    &__text
        font-family 'Conv_Lato-Regular'
        font-size 11px
        margin-top 7px
    &__button
        position relative
        box-sizing border-box
        border-radius 3px
        cursor pointer
        outline none
        font-family 'Conv_Lato-Black'
        color #4eb7a8
        font-size 10px
        width 128px
        height 25px
        background-color #ffffff
        border solid #28a290
        border-width 0 0 3px 0
        margin 21px 0 0 7px
        z-index 1000
        &:active
            background #28a290
            color #ffffff
            border #ffffff solid 
            border-width 1px 1px 3px 1px