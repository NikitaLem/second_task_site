.news
    display flex
    width 250px
    height 184px
    &__image-container
        float left
        width 32.99%
        border-radius 5px 0 0 5px
    &__image
        width 100%
        height 100%
        border-radius 5px 0 0 5px
    &__content
        float left
        width 67.01%
        border-radius 0 5px 5px 0
        background #e75735
        color #ffffff
        padding 15px 0 0 15px
    &__header
        font-family 'Conv_Lato-Light'
        font-size 28px
    &__date
        font-family 'Conv_Lato-Black'
        font-size 11px
        margin-top 7px
    &__text
        font-family 'Conv_Lato-Regular'
        font-size 11px
        margin-top 11px